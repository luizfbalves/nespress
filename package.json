{
  "name": "nespress",
  "version": "1.0.5",
  "author": "luizfbalves",
  "repository": {
    "type": "git",
    "url": "https://github.com/luizfbalves/nespress"
  },
  "dependencies": {
    "express": "^4.21.2",
    "inversify": "^7.5.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bun": "latest",
    "@types/express": "^5.0.0",
    "@types/inversify": "^2.0.32",
    "@types/supertest": "^6.0.3",
    "bun-plugin-dts": "^0.3.0",
    "supertest": "^7.1.0",
    "vitest": "^3.1.1"
  },
  "description": "Nespress is a wrapper around express that allows you to use decorators to define routes. It also includes a simple way to register controllers and their routes.",
  "keywords": [
    "nespress",
    "typescript",
    "decorators"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run build.ts",
    "build:link": "bun run build.ts && bun link",
    "dev": "bun run src/main.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "example:logger": "bun run examples/logger-example.ts"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "files": [
    "./dist/*",
    "README.md"
  ],
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "default": "./dist/main.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.js"
    },
    "./decorators": {
      "types": "./dist/decorators/index.d.ts",
      "default": "./dist/decorators/index.js"
    },
    "./common": {
      "types": "./dist/common/index.d.ts",
      "default": "./dist/common/index.js"
    }
  }
}
